{
  "name": "@currencybase/currency",
  "description": "Fraction number library",
  "version": "0.0.1",
  "keywords": [
    "currencybase",
    "currency"
  ],
  "author": "Logan Luo <github.com/logan272>",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "types": "./dist/esm/index.d.ts",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "build": "tsc;tsc --module commonjs --outDir dist/cjs",
    "watch": "chokidar 'src/**/*.ts' -c 'pnpm -wc exec turbo run build --filter=detect-provider'",
    "typedoc": "typedoc src/index.ts --out ../../docs/api/currency",
    "lint": "eslint src",
    "fix": "eslint src --fix",
    "ts-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/currencybase/currencybase.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/currencybase/currencybase/issues"
  },
  "homepage": "https://github.com/currencybase/currencybase#readme",
  "dependencies": {
    "@currencybase/fraction": "workspace:*",
    "bignumber.js": "^9.1.2",
    "tiny-invariant": "^1.3.1"
  }
}
